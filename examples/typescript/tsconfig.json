{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@example/utils": ["../utils/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "files": ["types/references.d.ts"],
  "exclude": ["node_modules", "platforms"]
}
