{
  "name": "docs.nativescript.org",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vitepress dev",
    "build": "vitepress build",
    "lint": "npm-run-all lint:*",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write ./content/**/*.md",
    "fix:text": "textlint ./content/**/*.md --fix",
    "lint:format": "prettier --check ./content/**/*.md",
    "lint:text": "textlint ./content/**/*.md"
  },
  "devDependencies": {
    "@nativescript/vitepress-theme": "https://github.com/NativeScript/docs/releases/download/vitepress-theme/vitepress-theme.tgz",
    "@types/node": "18.11.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "textlint": "^13.3.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-terminology": "^3.0.5",
    "vitepress": "1.0.0-rc.4"
  },
  "prettier": {
    "semi": false,
    "printWidth": 80,
    "singleQuote": true
  }
}
